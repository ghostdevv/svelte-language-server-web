{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "WebWorker", "Webworker.Iterable", "DOM.Iterable"],

		/* Bundler mode */
		"importHelpers": true,
		"moduleResolution": "Node",
		"noEmitOnError": false,
		"resolveJsonModule": true,
		"strict": false,
		"emitDeclarationOnly": true,
		"inlineSources": false,
		"noEmit": false,
		"noResolve": false,
		"declarationDir": "./dist",
		"declaration": true,

		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": true,
		/* Linting */
		"sourceMap": false,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": ["node_modules/@open-rpc/client-js/src/transports/Transport.ts"],
	"include": ["src/main.ts", "src/**/*.d.ts", "vite-env.d.ts"]
}
