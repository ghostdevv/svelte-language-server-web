{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		/* Bundler mode */
		"importHelpers": true,
		"moduleResolution": "Node",
		"noEmitOnError": false,
		"resolveJsonModule": true,
		"strict": false,
		"emitDeclarationOnly": true,
		"inlineSources": false,
		"noEmit": false,
		"noResolve": true,
		"declarationDir": "./dist",
		"declaration": true,

		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": true,
		/* Linting */
		"sourceMap": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*.ts",
		"@open-rpc/client-js/build/transports/Transport.js",
		"@open-rpc/client-js/build/transports/Transport.{d.ts,js}",
		"@open-rpc/client-js/build/Request.{d.ts,js}",
		"src/**/*.d.ts"
	]
}
